$stdout.sync = true
$stderr.sync = true
$LOAD_PATH.unshift File.expand_path('../lib', __dir__)

require 'java_buildpack/buildpack'

app_dir = ARGV[0]
build = ARGV[1]
deps_path = ARGV[2]
index = ARGV[3]

puts "APP DIR: #{app_dir}"
puts "BUILD: #{build}"
puts "DEPS_PATH: #{deps_path}"
puts "Index: #{index}"
puts "Index: #{index}"
puts "dirname: #{File.dirname("$0")}"
system "whereis gdaldem.tar.gz"

puts "Adding gdaldem support #{deps_path}/#{index}"
myPath =  `ls #{deps_path} 2>&1`;
puts "my path #{myPath}"
system "tar xzf #{deps_path}/#{index}/vendor/gdaldem.tar.gz -C #{build}/"

JavaBuildpack::Buildpack.with_buildpack(app_dir, 'Finalize failed with exception %s', &:compile)
